# Database
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=trakly
MYSQL_USER=trakly_user
MYSQL_PASSWORD=trakly_pass
MYSQL_PORT=3309  # Local Docker Compose host port (K8s: use 3306 container port)

# Backend
BACKEND_PORT=8003  # Local Docker Compose host port (K8s: use 8000 container port)
DEBUG=true
ENVIRONMENT=development
JWT_SECRET_KEY=trakly-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
BACKEND_CORS_ORIGINS=["http://localhost:3003","http://localhost"]

# Frontend
FRONTEND_PORT=3003  # Local Docker Compose host port (K8s: use 80 container port)
VITE_API_URL=http://localhost:8003/api/v1

# ========================================
# KUBERNETES DEPLOYMENT NOTES
# ========================================
# Container Ports (for K8s Service definitions):
# - Database:  3306 (MySQL)
# - Backend:   8000 (FastAPI/Uvicorn)
# - Frontend:  80 (Nginx)
#
# The host ports above (3309, 8003, 3003) are only for local Docker Compose.
# In K8s, use the container ports in your Service manifests.

# Email/SMTP Configuration (Optional - for notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@trakly.com
